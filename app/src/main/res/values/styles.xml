<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btn_style">
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">#5C9628</item>
        <item name="android:textSize">10sp</item>
        <item name="android:radius">12dp</item>
    </style>

    <style name="btn_delivery_style">
        <item name="android:backgroundTint">#FBBC04</item>
        <item name="android:gravity">center</item>
        <item name="android:radius">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="edit_text_style">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_rounded2</item>
        <item name="android:drawableLeft">@drawable/ic_search</item>
        <item name="android:drawableRight">@drawable/ic_options</item>
    </style>

    <style name="card_menu_name">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/product_sans_regular</item>
    </style>


    <style name="open">
        <item name="fontFamily">@font/product_sans_regular</item>
        <item name="android:textColor">#82C446</item>
        <item name="android:textSize">18sp</item>
        <item name="android:drawableLeft">@drawable/ic_cicrlegreen</item>
    </style>


    <style name="time">
        <item name="android:backgroundTint">#FFC545</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="general">
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="general2">
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>